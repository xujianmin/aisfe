<tr id="stock_<%= stock.id %>">
  <td><%= stock.drug.product_name %></td>

  <td data-controller="inline-edit"
      data-inline-edit-url-value="<%= inline_edit_path(stock) %>">
    <div data-inline-edit-target="display">
      <%= stock.quantity %>
    </div>
    <%= form_with(model: stock,
                  data: { inline_edit_target: "form", action: "submit->inline-edit#submit"},
                  class: "d-none") do |f| %>
      <%= hidden_field_tag :resource_type, "stock" %>
      <%= f.number_field :quantity, class: "form-control",
                  data: { inline_edit_target: "input"} %>
    <% end %>
  </td>

  <td data-controller="inline-edit"
      data-inline-edit-url-value="<%= inline_edit_path(stock) %>">
    <div data-inline-edit-target="display">
      <%= stock.distribution_quantity %>
    </div>
    <%= form_with(model: stock,
                  data: { inline_edit_target: "form", action: "submit->inline-edit#submit"},
                  class: "d-none") do |f| %>
      <%= hidden_field_tag :resource_type, "stock" %>
      <%= f.number_field :distribution_quantity, class: "form-control",
                  data: { inline_edit_target: "input" } %>
    <% end %>
  </td>

  <td>
    <%= link_to stock_stock_change_logs_path(stock), class: "btn btn-sm btn-primary" do %>
      <i class="bi bi-list-check"></i>
      日志
    <% end %>
  </td>
</tr>