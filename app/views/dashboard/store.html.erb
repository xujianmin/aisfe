<div class="col-12 mt-3">
  <div class="card">
    <div class="card-body">
      <%= @store.name %>
    </div>
  </div>

  <div class="col-12 mt-3">
    <div class="scrollable-area" style="height: calc(100vh - 200px); overflow-y: auto;">
      <table class="table table-striped">
        <thead class="sticky-top bg-white">
          <tr>
            <th>药品名称</th>
            <th>库存</th>
            <th>分销数量</th>
          </tr>
        </thead>
        <tbody>
          <% @store.stocks.each do |stock| %>
            <%= render partial: "drug_table_line_item", locals: { stock: stock } %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>