<div class="row mt-3">
  <div class="col-12 mb-3">
    <div class="card">
      <div class="card-body row">
        <div class="col-8"><p class="card-title"><%= @user.email_address%> 的工作台</p></div>
        <div class="col-4"><%= button_to "登出系统", session_path(@user), method: :delete, data: { turbo_confirm: "确定登出系统？" }, class: "btn btn-sm btn-danger float-end" %></div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-3 mb-3">
    <div class="card">
      <div class="card-body">
        <small class="text-secondary">当前负责终端</small>
        <p class="fs-1 fw-bolder text-center mb-0 "><%= @user.stores.count %></p>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-3 mb-3">
    <div class="card">
      <div class="card-body">
        <small class="text-secondary">当前负责药品</small>
        <p class="fs-1 fw-bolder text-center mb-0 "><%= @user.drugs.count %></p>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-3 mb-3">
    <div class="card">
      <div class="card-body">
        <small class="text-secondary">当前负责店员</small>
        <p class="fs-1 fw-bolder text-center mb-0 "><%= @user.clerks.count %></p>
      </div>
    </div>
  </div>
    <div class="col-6 col-sm-3 mb-3">
    <div class="card">
      <div class="card-body">
        <small class="text-secondary">总计拜访</small>
        <p class="fs-1 fw-bolder text-center mb-0 "><%= @user.visits.count %></p>
      </div>
    </div>
  </div>
  <div class="col-12">
    <% @user.stores.each_with_index do |store, index| %>
      <%= render store, index: index %>
    <% end %>
  </div>
</div>
