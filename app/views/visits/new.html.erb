<div class="card my-3">
  <div class="card-header">
    <p class="fs-6 text-secondary mb-0">新建拜访记录 / 拜访人：<%= Current.user.email_address %></p>
  </div>
  <div class="card-body">
    <p class="fs-5 text-center mb-0 "><%= @store.name %></p>
  </div>
  <div class="card-footer">
    <small class="text-secondary m-0 float-end">
      今天是：<%= Date.today.strftime("%Y-%m-%d") %>
    </small>
  </div>
</div>

<div class="row mb-3">
  <div class="col-4 d-grid">
    <%= link_to "管理该店所有拜访记录", store_visits_path(@store), class: "btn btn-outline-primary" %>
  </div>
</div>

<%= render "form" %>
