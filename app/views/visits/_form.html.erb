<%= form_with(model: [@store, @visit]) do |form| %>
  <% if @visit.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@visit.errors.count, "error") %> prohibited this visit from being saved:</h4>
      <ul>
        <% @visit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-3">
    <%= form.rich_text_area :content, class: "form-control", rows: 10, 
                            style: "min-height: 200px; max-height: 400px; overflow-y: auto;" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "管理该店的拜访记录", store_visits_path(@store), class: "btn btn-outline-primary" %>
  </div>
<% end %> 