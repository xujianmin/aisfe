<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="mb-0">访问记录详情</h3>
      <div>
        <%= link_to "编辑", edit_store_visit_path(@store, @visit), class: "btn btn-warning" %>
        <%= button_to "删除", store_visit_path(@store, @visit), method: :delete, 
            class: "btn btn-danger", 
            data: { turbo_confirm: "确定要删除这条访问记录吗？" } %>
      </div>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <strong>药店：</strong>
        <%= @store.name %>
      </div>
      <div class="mb-3">
        <strong>拜访者：</strong>
        <%= @visit.user.email_address %>
      </div>
      <div class="mb-3">
        <strong>访问时间：</strong>
        <%= @visit.created_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
      <div class="mb-3">
        <strong>访问内容：</strong>
        <div class="mt-2">
          <%= @visit.content %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to "返回列表", store_visits_path(@store), class: "btn btn-secondary" %>
    </div>
  </div>
</div> 